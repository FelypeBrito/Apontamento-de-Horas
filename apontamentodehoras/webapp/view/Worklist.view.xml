<mvc:View
    controllerName="apontamento.apontamentodehoras.controller.Worklist"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:html="http://www.w3.org/1999/xhtml"
    xmlns:semantic="sap.f.semantic">

    <semantic:SemanticPage
        id="page"
        headerPinnable="false"
        toggleHeaderOnTitleClick="false">

        <semantic:titleHeading>
            <Title
                text="Clientes"
                level="H2"/>
        </semantic:titleHeading>

        <semantic:content>

            <Table
                id="table"
                width="auto"
                items="{
                    path: '/Cliente1Set',
                    sorter: {
                        path: 'Nome',
                        descending: false
                    }
                }"
                noDataText="{worklistView>/tableNoDataText}"
                busyIndicatorDelay="{worklistView>/tableBusyDelay}"
                growing="true"
                growingScrollToLoad="true"
                updateFinished=".onUpdateFinished">

                <headerToolbar>
                    <OverflowToolbar>
                        <Title/>
                        <ToolbarSpacer />
                                             
                        <SearchField
                            id="searchField"
                            tooltip="{i18n>worklistSearchTooltip}"
                            search=".onSearch">
                            <layoutData>
                                <OverflowToolbarLayoutData
                                    maxWidth="200px"
                                    priority="NeverOverflow"/>
                            </layoutData>
                        </SearchField>
                    </OverflowToolbar>
                    
                </headerToolbar>

                <columns>
                    <Column id="nameColumn">
                        <Text text="{i18n>tableNameColumnTitle}" id="nameColumnTitle"/>
                    </Column>
                    <Column id="unitNumberColumn" hAlign="End">
                        <Text text="ID" id="unitNumberColumnTitle"/>
                    </Column>
                </columns>

                <items>
                    <ColumnListItem
                        id= "colunClin"
                        type="Navigation"
                        press=".onPress">
                        <cells>
                            <ObjectIdentifier
                                title="{Nome}"/>
                            <ObjectNumber
                                unit="{ClienteID}" />     
                        </cells>
                        
                    </ColumnListItem>
                </items>
                

            </Table>
        </semantic:content>


        <semantic:sendEmailAction>
            <semantic:SendEmailAction id="shareEmail" press=".onShareEmailPress"/>
        </semantic:sendEmailAction>

    </semantic:SemanticPage>

    	<l:VerticalLayout class="sapUiContentPadding" width="100%">
		<l:content>
				<l:Grid
					defaultSpan="XL3 L3 M6 S12">
					<l:content>
						<VBox
							alignItems="Center">
							<Image
								src="{img>/products/pic1}"
								mode="{/imageMode}"
								height="{/imageHeight}"
								width="{/imageWidth}" >
								<layoutData>
									<FlexItemData growFactor="1" />
								</layoutData>
							</Image>
							<Text text="Background covers the entire container" class="sapUiSmallMarginTop"/>
						</VBox>
						<VBox
							alignItems="Center">
								<Image
									src="{img>/products/pic1}"
									mode="{/imageMode}"
									height="{/imageHeight}"
									backgroundSize="5em 5em"
									backgroundPosition="center"
									width="{/imageWidth}" >
									<layoutData>
										<FlexItemData growFactor="1" />
									</layoutData>
								</Image>
							<Text text="Center placed background" class="sapUiSmallMarginTop"/>
						</VBox>
						<VBox
							alignItems="Center">

							<Image
								src="{img>/products/pic1}"
								mode="{/imageMode}"
								height="{/imageHeight}"
								backgroundSize="2em 2em"
								backgroundRepeat="repeat"
								width="{/imageWidth}" >
								<layoutData>
									<FlexItemData growFactor="1" />
								</layoutData>
							</Image>
							<Text text="Repeating background" class="sapUiSmallMarginTop"/>
						</VBox>
						<VBox alignItems="Center">
							<html:Div style="background-color: #A9EAFF">
								<Image
										src="{img>/products/pic3}"
										mode="{/imageMode}"
										height="{/imageHeight}"
										backgroundSize="contain"
										backgroundPosition="center center"
										width="6em" />
							</html:Div>
							<Text text="The background adjusts its lower dimension in order to fit in the container" class="sapUiSmallMarginTop"/>
						</VBox>
					</l:content>
				</l:Grid>
		</l:content>
	</l:VerticalLayout>

</mvc:View>