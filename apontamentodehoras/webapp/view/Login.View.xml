<mvc:View
    controllerName="apontamento.apontamentodehoras.controller.Login"
    displayBlock="true"
    xmlns="sap.m"
    height="100%"
    xmlns:f="sap.ui.layout.form"
    xmlns:l="sap.ui.layout"
     xmlns:core="sap.ui.core"
    xmlns:mvc="sap.ui.core.mvc">

	<App>
    <Page title="Login Form">
        <content>
            <VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
                <items>
                    <Input id="id" placeholder="ID" />
                    <Input id="pasw" placeholder="Password" type="Password" />
                    <Button width="12rem" text="Login" type="Emphasized" press="onLoginTap" />
                </items>
            </VBox>
        </content>
        <footer>
            <Bar>
                <contentLeft>
                    <Text text="Infinitfy" />
                </contentLeft>
                <contentRight>
                    <Text text="v1" />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</App>

</mvc:View>
